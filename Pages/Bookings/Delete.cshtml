@page
@model Friberg_car_rentals_v2.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Ta bort bokning</h1><br />


<div>
    <h4>Är du säker att du vill ta bort bokningen?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.BookingId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.BookingId)
        </dd>        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.RentalStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.RentalStart)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.RentalEnd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.RentalEnd)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Booking.BookingId" />
        <input type="submit" value="Ta bort" class="btn btn-danger" /> |
        @if (ViewData["CurrentAdmin"] != null)
        {            
        <a asp-page="./Index">Tillbaka</a>
        }
        @if (ViewData["CurrentUserId"] != null)
        {
            <a asp-page="./ListCustomerBookings">Tillbaka</a>
        }
    </form>
</div>
