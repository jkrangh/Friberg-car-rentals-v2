@page
@model Friberg_car_rentals_v2.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<p>
    Välkommen @ViewData["CurrentUserName"]
</p>
<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Booking.CustomerId"value="@ViewData["CurrentUserId"]"/> <!--Cookie from login used as preset-->
            </div>
            <div class="form-group">                
                <input type="hidden" asp-for="Booking.CarId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Booking.RentalStart" class="control-label"></label>
                <input asp-for="Booking.RentalStart" class="form-control" />
                <span asp-validation-for="Booking.RentalStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.RentalEnd" class="control-label"></label>
                <input asp-for="Booking.RentalEnd" class="form-control" />
                <span asp-validation-for="Booking.RentalEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewData["CurrentAdmin"] != null)
    {
        <a asp-page="Index">Tillbaka</a>
    }
    @if (ViewData["CurrentAdmin"] == null)
    {
        <a asp-page="/Cars/IndexAvailable">Tillbaka</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
