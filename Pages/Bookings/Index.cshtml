@page
@model Friberg_car_rentals_v2.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Bokningar";
}

<h1>Bokningar</h1>
<p>
    Du är inloggad som @ViewData["CurrentAdmin"]
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].BookingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].CarId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].RentalStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].RentalEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalEnd)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BookingId">Ändra</a> |
                <a asp-page="./Details" asp-route-id="@item.BookingId">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.BookingId">Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
