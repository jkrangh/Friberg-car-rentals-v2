@page
@model Friberg_car_rentals_v2.Pages.Cars.DetailsModel

@{
    ViewData["Title"] = "Detaljer";
}

<h1>Detaljer</h1>

<div>
    <h4>Bil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarMake)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarMake)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarModel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.RentalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.RentalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Description)
        </dd>
    </dl>
</div>
@if (Model.Car.CarImageURL != null)
{
    <div class="image-container">
        <img src="@Model.Car.CarImageURL" alt="Bild på bilen"/>
    </div>
}
@if (ViewData["CurrentAdmin"] != null)
{
    <tr>
        <td>
            <a asp-page="./Index">Tillbaka</a> |
            <a asp-page="./Edit" asp-route-id="@Model.Car.CarId">Ändra</a>
        </td>
    </tr>
}
@if (ViewData["CurrentAdmin"] == null)
{
    <a asp-page="./IndexAvailable">Tillbaka</a>
}

